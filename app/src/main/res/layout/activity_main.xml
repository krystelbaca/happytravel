<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.krystelbaca.com.happytravel.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/header_image"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Destinos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_destinos"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/btn_viajes"
        android:layout_alignStart="@+id/btn_viajes"
        android:layout_alignRight="@+id/btn_viajes"
        android:layout_alignEnd="@+id/btn_viajes" />

    <Button
        android:text="Mis viajes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/btn_viajes"
        android:layout_below="@+id/btn_destinos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Ofertas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="13dp"
        android:id="@+id/btn_ofertas"
        android:layout_below="@+id/btn_viajes"
        android:layout_alignLeft="@+id/btn_viajes"
        android:layout_alignStart="@+id/btn_viajes" />



    <Button
        android:text="Mi cuenta"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:id="@+id/btn_cuenta"
        android:layout_below="@+id/btn_ofertas"
        android:layout_alignLeft="@+id/btn_ofertas"
        android:layout_alignStart="@+id/btn_ofertas" />

</RelativeLayout>
